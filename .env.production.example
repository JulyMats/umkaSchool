# Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# ============================================
# Database Configuration
# ============================================
DB_URL=jdbc:postgresql://your-production-db-host:5432/umkaSchoolDB
DB_USERNAME=your-production-db-username
DB_PASSWORD=your-secure-production-db-password

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8080

# ============================================
# JWT Configuration
# ============================================
# Use: openssl rand -base64 32
JWT_SECRET=your-very-secure-production-secret-key-minimum-256-bits-CHANGE-THIS
JWT_EXPIRATION=86400000

# ============================================
# Auth Configuration
# ============================================
AUTH_REFRESH_TOKEN_EXPIRATION_DAYS=30
AUTH_PASSWORD_RESET_EXPIRATION_HOURS=2

# ============================================
# SMTP Configuration
# ============================================
# You can use SMTP or Brevo API 
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-production-email@gmail.com
MAIL_PASSWORD=your-production-app-password

# ============================================
# Brevo API Configuration 
# ============================================
# Brevo API is recommended for production email sending
BREVO_API_KEY=your-brevo-production-api-key
BREVO_API_URL=https://api.brevo.com/v3/smtp/email

# ============================================
# Application Configuration
# ============================================
APP_NAME=UmkaSchool
FRONTEND_URL=https://umkaschool.netlify.app

# ============================================
# CORS Configuration
# ============================================
CORS_ALLOWED_ORIGINS=https://umkaschool.netlify.app
APP_COOKIE_SECURE=true

# ============================================
# Password Reset Token Expiration
# ============================================
# 24 hours in milliseconds
PASSWORD_RESET_EXPIRATION=86400000

# ============================================
# Cache Configuration
# ============================================
CACHE_USER_TTL=600
CACHE_USER_MAX_SIZE=250
CACHE_EXERCISE_TYPE_TTL=3600
CACHE_EXERCISE_TYPE_MAX_SIZE=100
CACHE_ACHIEVEMENT_TTL=3600
CACHE_ACHIEVEMENT_MAX_SIZE=100
CACHE_STUDENT_GROUP_TTL=1800
CACHE_STUDENT_GROUP_MAX_SIZE=200