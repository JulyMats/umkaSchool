# Development Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================
# Database Configuration
# ============================================
DB_URL=jdbc:postgresql://localhost:5432/umkaSchoolDB
DB_USERNAME=postgres
DB_PASSWORD=your-database-password

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8080

# ============================================
# JWT Configuration
# ============================================
# Generate a secure secret key (minimum 256 bits)
# You can use: openssl rand -base64 32
JWT_SECRET=your-secret-key-here-change-in-production-minimum-256-bits
JWT_EXPIRATION=86400000

# ============================================
# Auth Configuration
# ============================================
AUTH_REFRESH_TOKEN_EXPIRATION_DAYS=30
AUTH_PASSWORD_RESET_EXPIRATION_HOURS=2

# ============================================
# SMTP Configuration (for development)
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password


# ============================================
# Brevo API Configuration (optional for development)
# ============================================
# Leave empty if you want to use SMTP instead
BREVO_API_KEY=
BREVO_API_URL=https://api.brevo.com/v3/smtp/email

# ============================================
# Application Configuration
# ============================================
APP_NAME=UmkaSchool
FRONTEND_URL=http://localhost:5173

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins for CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080,http://127.0.0.1:5173,http://127.0.0.1:3000

# ============================================
# Password Reset Token Expiration
# ============================================
# 24 hours in milliseconds
PASSWORD_RESET_EXPIRATION=86400000

# ============================================
# Cache Configuration
# ============================================
CACHE_USER_TTL=600
CACHE_USER_MAX_SIZE=250
CACHE_EXERCISE_TYPE_TTL=3600
CACHE_EXERCISE_TYPE_MAX_SIZE=100
CACHE_ACHIEVEMENT_TTL=3600
CACHE_ACHIEVEMENT_MAX_SIZE=100
CACHE_STUDENT_GROUP_TTL=1800
CACHE_STUDENT_GROUP_MAX_SIZE=200